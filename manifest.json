{
  "manifest_version": 3,
  "name": "Znanium PDF Downloader",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting", "downloads"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Download book from cache",
    "default_popup_width": 260
  },
  "description": "Загрузка книг Znanium из кэша браузера",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://znanium.ru/read?id=*"],
      "js": ["preload.js", "content.js", "libs/pdfkit.standalone.js", "libs/blob-stream.min.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["libs/pdfkit.standalone.js", "libs/blob-stream.min.js", "libs/inject.js"],
      "matches": ["*://znanium.ru/*"]
    }
  ]
}